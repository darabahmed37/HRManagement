@using GridMvc
@model IEnumerable<EmployeeModel> 

<div class="row">
    <div class="col-md-12">
        @Html.Grid(Model).Named("Employees").Columns(c => {
            c.Add(x => x.Code).Titled("Employee Code").Filterable(true).Sortable(true);
            c.Add(x => x.Name).Titled("Employee Name").Filterable(true).Sortable(true);
            c.Add(x => x.JoinDate).Titled("Joining Date").Sortable(true).Filterable(true);
            c.Add(x => x.Qualification).Titled("Qualification").Sortable(true).Filterable(true);
            c.Add(x => x.City).Titled("City").Sortable(true).Filterable(true);
            c.Add(x => x.Religion).Titled("Religion").Sortable(true).Filterable(true);
            c.Add(x => x.AppointedBy).Titled("Appointed By").Sortable(true).Filterable(true);
        }).WithPaging(10)
    </div>
</div>


